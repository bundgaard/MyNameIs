<Window x:Class="MyNameIs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNameIs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label Content="Name" />
            <TextBox TextWrapping="Wrap" Text="This is name" x:Name="name" Width="120" />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Email" />
            <TextBox TextWrapping="Wrap" Text="This is email" x:Name="email" Width="120" />
        </StackPanel>
        
        <Button Grid.Row="2" Content="Add person" Click="Button_Click"/>
        <ListBox Grid.Row="3" x:Name="persons" d:Background="Beige"/>
        
    </Grid>
</Window>
